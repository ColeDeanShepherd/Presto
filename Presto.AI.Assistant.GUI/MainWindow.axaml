<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Presto.AI.Assistant;assembly=Presto.AI.Assistant"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Presto.AI.Assistant.GUI.MainWindow"
        Title="Presto.AI.Assistant.GUI">
	<StackPanel>
		<AutoCompleteBox
            x:Name="commandBar"
            Watermark="Enter a command"
            FilterMode="Contains"
			MinimumPrefixLength="0">
			<AutoCompleteBox.ItemTemplate>
				<DataTemplate x:DataType="{x:Type local:Command}">
					<StackPanel>
						<TextBlock Text="{Binding Name}" />
						<TextBlock Text="{Binding Description}" />
						<Button Click="OnRunClicked">Run</Button>
					</StackPanel>
				</DataTemplate>
			</AutoCompleteBox.ItemTemplate>
		</AutoCompleteBox>
	</StackPanel>
</Window>
